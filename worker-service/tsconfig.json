{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es5",
            "es6"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist/",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
        }
    },
    "include": [
        "src/**/*", "../interfaces/src/type/TopicType.ts"],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}
